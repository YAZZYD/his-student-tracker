{
  "files": [],
  "include": ["src/**/*","prisma/**/*","config/prisma.config.ts","config/*","services/*","schemas/*", "schemas/response/response.schema.ts"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "paths": {
      "@renderer/*": ["./src/renderer/src/*"],
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@services/*": ["./services/*"]
    }
  },
}

