generator client {
  provider               = "prisma-client"
  output                 = "./generated"
  engineType             = "client"
  runtime                = "nodejs"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
}

enum Activity_Type {
  INTERNSHIP
  EVENT
  WORKSHOP
  SPORT
}

enum Skill_Type {
  SOFT
  HARD
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Grade {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  students        Student[]
  specialtyGrades SpecialtyGrade[]
}

model Specialty {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  students        Student[]
  specialtyGrades SpecialtyGrade[]
}

model SpecialtyGrade {
  specialtyId Int
  gradeId     Int
  specialty   Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade)
  grade       Grade     @relation(fields: [gradeId], references: [id], onDelete: Cascade)

  @@id([specialtyId, gradeId])
}

model Student {
  id              Int          @id @default(autoincrement())
  code            String       @unique
  name            String       @unique
  email           String       @unique
  phone           String       @unique
  address         String
  birth_date      DateTime
  birth_place     String
  enrollment_year DateTime
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  gradeId         Int
  specialtyId     Int
  grade           Grade        @relation(fields: [gradeId], references: [id], onDelete: Restrict)
  specialty       Specialty    @relation(fields: [specialtyId], references: [id], onDelete: Restrict)
  evaluations     Evaluation[]
  activities      Activity[]
}

model Activity {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  type        Activity_Type
  students    Student[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Evaluation {
  id               Int               @id @default(autoincrement())
  studentId        Int
  comment          String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  student          Student           @relation(fields: [studentId], references: [id], onDelete: Cascade)
  skillEvaluations SkillEvaluation[]
}

model Skill {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String            @unique
  type        Skill_Type
  evaluation  SkillEvaluation[]
}

model SkillEvaluation {
  evaluationId Int
  skillId      Int
  score        Int?
  evaluation   Evaluation @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  skill        Skill      @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([evaluationId, skillId])
}
